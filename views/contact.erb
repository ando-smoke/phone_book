<h2>Contact Detail</h2>
  <ul>
    <li>First name: <em><%= @contact.first_name() %></em></li>
    <li>Last name: <em><%= @contact.last_name() %></em></li>
    <li>Phone numbers:
      <ul>
        <% @contact.phone_numbers().each() do |phone| %>
          <li><em><%= phone.type() %>: <%= phone.number() %></em></li>
        <% end %>
      </ul>
    </li>
  </ul>
<br />

<h3>Add a phone number:</h3>

<form action="/add_phone_number" method="post">
  <input id="contact_id" name="contact_id" type="hidden" value="<%= @contact.id() %>" />

  <div class="form-group">
    <label for="phone_type">Phone type:</label>
    <input id="phone_type" name="phone_type" type="text" class="form-control" />
  </div>
  <div class="form-group">
    <label for="phone_number">Phone number:</label>
    <input id="phone_number" name="phone_number" type="text" class="form-control" />
  </div>

  <button type="submit" class="btn btn-primary">Add Phone Number</button>
</form>
<br />
<a href="/">
  <button type="button" class="btn btn-info">Back to Main Page</button>
</a>
